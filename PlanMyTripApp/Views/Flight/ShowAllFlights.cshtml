@model IEnumerable<PlanMyTripApp.Models.Flight>

@{
    ViewBag.Title = "ShowAllFlights";
}

<h2>ShowAllFlights</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FlightName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SeatsCapacity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoOfSeatsAvailable)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FlightName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SeatsCapacity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NoOfSeatsAvailable)
        </td>
        <td>
            @Html.ActionLink("Edit", "UpdateFlightDetails", new { fID=item.FlightNumber }) |
            @Html.ActionLink("Details", "ShowFlightDetails", new { fID=item.FlightNumber }) 
            @Html.ActionLink("Delete", "DeleteFlightDetails", new { fID=item.FlightNumber })
        </td>
    </tr>
}

</table>
